<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Autocare</title>

		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<link href="css/starter-template.css" rel="stylesheet">
	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" 
							data-toggle="collapse" data-target="#navbar" 
							aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Autocare</a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li class="active"><a href="/">Home</a></li>
						
						<%if (!loggedin) { %>
						<li><a href="/login" class="login">Log in</a></li>
						<% } %>
						
						<%if (loggedin) { %>
						<li><a href="/invoices">Invoices</a></li>
						<li><a href="/files">Files</a></li>
						<li><a href="#" class="logout">Log out</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container">
			<div class="starter-template">
				<h1>Autocare File Management</h1>
				<p class="lead">Files are stored in the Amazon Cloud (S3), for unlimited storage capacity,
					and for access from anywhere!
				</p>
			</div>
		</div>

		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		
		<script type="text/javascript">
			(function() {
				$(document).ready(function() {
					$("a.logout").click(function(e) {
						e.preventDefault();
						$.ajax({
							url: '/logout',
							method: 'POST',
							success: function() {
								document.location.href = "/"; 
							}
						});
						return false;
					});
				});
			})();
		</script>
	</body>
</html>
