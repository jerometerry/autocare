<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<title>Autocare</title>

		<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<link href="css/starter-template.css" rel="stylesheet">
	</head>

	<body>
		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" 
							data-toggle="collapse" data-target="#navbar" 
							aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">Autocare</a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li class="active"><a href="/files">Files</a></li>
						<li><a href="#" class="logout">Log out</a></li>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container">
			<div class="starter-template">
				<h1>Autocare File Management</h1>
				<p class="lead">Files are stored in the Amazon Cloud (S3), for unlimited storage capacity,
					and for access from anywhere!
				</p>
			</div>

			<div class="container">
				<h2>File List</h2>

				<div class="container">
					<div class="row`">
						<ul id="file_list" />
					</div>
					<div class="row">
						<button id="refresh_files_btn" class="btn-primary">Refresh File List</button>
					</div>
				</div>	
			</div>

			<div class="container">
				<h2>Upload Files</h2>
				<div class="container">
					<div class="row">
						<input type="file" id="file_input" name="file" />
					</div>
					<div class="row" style="padding-top: 10px;">
						<button id="upload_file_btn" class="btn-primary">Upload</button>
					</div>
				</div>
			</div>
		</div>

		<div class="modal fade bs-example-modal-sm" id="myPleaseWait" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">
							<span class="glyphicon glyphicon-time">
							</span>Please Wait
						</h4>
					</div>
					<div class="modal-body">
						<div class="progress">
							<div class="progress-bar progress-bar-info progress-bar-striped active" style="width: 100%">
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

		<script src="js/autocare.files.js"></script>
		
		<script type="text/javascript">
			(function() {
				$(document).ready(function() {
					$(".logout").click(function(e) {
						e.preventDefault();
						$.ajax({
							url: '/logout',
							method: 'POST',
							success: function() {
								document.location.href = "/"; 
							}
						});
						return false;
					});
				});
			})();
		</script>
	</body>
</html>
