		<div class="container">
			<div class="starter-template">
				<h1>Autocare File Management</h1>
				<p class="lead">Files are stored in the Amazon Cloud (S3), for unlimited storage capacity,
					and for access from anywhere!
				</p>
			</div>
			
			<div class="container">
				<h2>File List</h2>
				
				<div class="container">
					<div id="file_list_container" class="container">
						<ul id="file_list" />
					</div>
						
					<form id="file_list_form">
						<input type="submit" id="refresh_files" name="refresh_files" value="Refresh File List" />
					</form>
				</div>	
			</div>
			
			<div class="container">
				<h2>Upload Files</h2>
				<div class="container">
					<form id="file_uploader_form">
						<input type="file" id="file_input" name="file" />
					</form>
				</div>
			</div>
		</div>
		
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
			
		<script type=text/javascript>
			(function() {
				$(document).ready(function(){
					$("#file_input").on("change", function(){
						var file = this.files[0];
						if (file) {
							getUploadUrl(file, upload_file);
						}
					});
					
					$("#refresh_files").click(function(e){
						e.preventDefault();
						refreshFileList();
						return false;
					});
					
					$(document).on("click", ".s3-file-link", function(){
						var file = $(this).text();
						downloadFile(file);
					});
					
					refreshFileList();
				});
			})();
		
			function getUploadUrl(file, callback) {
				var url = "/files/uploadurl?file_name="+file.name+"&file_type="+file.type;
				$.ajax({
					dataType: 'json',
					url: url,
					success: function(response) {
						callback(file, response.url);
					}
				});
			}

			function uploadFile(file, url) {
				var xhr = new XMLHttpRequest();
				xhr.open("PUT", url);
				xhr.setRequestHeader('x-amz-acl', 'public-read');
				xhr.onload = function() {
					if (xhr.status === 200) {
						refreshFileList();
					}
				};
				xhr.onerror = function() {
					alert("File upload failed!");
				};
				xhr.send(file);
			}
			
			function downloadFile(file) {
				var url = "/files/downloadurl?file_name="+file;
				$.ajax({
					dataType: 'json',
					url: url,
					success: function(response) {
						window.open(response.url, '_blank');
					}
				});
			}
			
			function refreshFileList() {
				$.ajax({
					dataType: 'json',
					url: '/files',
					success: function(response) {
						if (response) {
							var files$ = $("#file_list");
							files$.empty();
							response.forEach(function(element, index) {
								var download_link$ = $("<a class='s3-file-link' href='#'/>").text(element.key);
								var item$ = $("<li/>").append(download_link$);
								files$.append(item$);
							});
						}
					}
				});
			}
		</script>
